<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">add.mandate.on.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_payment_partner.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_bank_id" position="after" groups="base.group_multi_company">
                <field domain="[('partner_id', '=', commercial_partner_id), ('state', '=', 'valid')]" invisible="mandate_required == False or move_type not in ('out_invoice', 'out_refund')" name="mandate_id" required="mandate_required == True and move_type in ('out_invoice', 'out_refund')"/>
                <field invisible="1" name="mandate_required"/></field></field>
    </record>
</odoo>
