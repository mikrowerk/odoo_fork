<odoo>
    <record id="account_payment_line_create_form" model="ir.ui.view">
        <field name="name">account_payment_line_create.form</field>
        <field name="model">account.payment.line.create</field>
        <field name="arch" type="xml">
            <form string="Choose Move Lines Filter Options">
                <group name="main">
                    <field invisible="1" name="order_id"/>
                    <field name="date_type"/>
                    <field invisible="date_type != 'move'" name="move_date" required="date_type == 'move'"/>
                    <field invisible="date_type != 'due'" name="due_date" required="date_type == 'due'"/>
                    <field name="journal_ids" placeholder="Keep empty for using all journals" widget="many2many_tags"/>
                    <field name="partner_ids" placeholder="Keep empty to use all partners" widget="many2many_tags"/>
                    <field name="payment_mode"/>
                    <field name="target_move" widget="radio"/>
                    <field name="invoice"/>
                    <field name="allow_blocked"/>
                    <label colspan="2" for="populate" string="Click on Add All Move Lines to auto-select the move lines matching the above criteria or click on Add an item to manually select the move lines filtered by the above criteria."/>
                    <button colspan="2" name="populate" string="Add All Move Lines" type="object"/>
                </group>
                <group name="move_lines" string="Selected Move Lines to Create Transactions">
                    <field colspan="2" context="{'tree_view_ref': 'account_payment_order.view_move_line_tree', 'form_view_ref':'account_payment_order.view_move_line_form_no_edit'}" force_save="1" name="move_line_ids" nolabel="1">
                        <tree>
                            <field name="date"/>
                            <field name="move_id" required="0"/>
                            <field name="journal_id"/>
                            <field name="partner_id"/>
                            <field name="account_id"/>
                            <field name="date_maturity"/>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="amount_residual" sum="Total Residual"/>
                            <field name="amount_currency"/>
                            <field name="amount_residual_currency"/>
                            <field invisible="1" name="company_currency_id"/>
                        </tree></field>
                </group>
                <footer>
                    <button class="oe_highlight" name="create_payment_lines" string="Create Transactions" type="object"/>
                    <button class="oe_link" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
    <record id="account_payment_line_create_action" model="ir.actions.act_window">
        <field name="name">Create Transactions from Move Lines</field>
        <field name="res_model">account.payment.line.create</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
