<odoo>
    <data>
        <!--         explicit category list view definition -->
        <record model="ir.ui.view" id="jobcontrol.catagory_list">
            <field name="name">jobcontrol_category list</field>
            <field name="model">jobcontrol.job_category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_job_category_form" model="ir.ui.view">
            <field name="name">job_category.input.form</field>
            <field name="model">jobcontrol.job_category</field>
            <field name="arch" type="xml">
                <form string="Job Category Input" class="o_sale_order">
                    <header>
                    </header>
                    <sheet>
                        <group name="category_details">
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
