<odoo>
    <data noupdate="1">
        <!--         explicit category list view definition -->
        <record model="ir.ui.view" id="jobcontrol.costs_input">
            <field name="name">jobcontrol_costs input</field>
            <field name="model">jobcontrol.job_costs</field>
            <field name="arch" type="xml">
                <tree
                        editable="top">
                    <field name="job_id"/>
                    <field name="event_id"/>
                    <field name="effective_date" string="Date"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_uom_category_id" invisible="1" optional="hide"/>
                    <field name="product_uom_qty" string="Qty"/>
                    <field name="product_uom" readonly="True"/>
                    <field name="currency_id" invisible="True" optional="hide"/>
                    <field name="unit_price" string="Unit price"/>
                    <field name="total_price" string="Total" widget="monetary"/>
                    <field name="not_billable"/>
                    <field name="invoiced" string="invoiced"/>
                    <field name="description" string="Description" optional="hide"/>
                    <button type="object" name="get_formview_action" string="Open" icon="fa-edit"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jobcontrol.costs_list_readonly">
            <field name="name">jobcontrol_costs_list_readonly</field>
            <field name="model">jobcontrol.job_costs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="job_id"/>
                    <field name="event_id"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_uom_category_id" invisible="1" optional="hide"/>
                    <field name="product_uom_qty" string="Qty"/>
                    <field name="product_uom" readonly="True"/>
                    <field name="currency_id" invisible="True" optional="hide"/>
                    <field name="unit_price" string="Unit price"/>
                    <field name="total_price" string="Total" widget="monetary"/>
                    <field name="not_billable"/>
                    <field name="invoiced" string="invoiced"/>
                    <field name="description" string="Description" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="jobcontrol.view_job_costs_form" model="ir.ui.view">
            <field name="name">job_costs.input.form</field>
            <field name="model">jobcontrol.job_costs</field>
            <field name="arch" type="xml">
                <form string="Job Costs Input" class="o_sale_order">
                    <header>
                    </header>
                    <sheet>
                        <group name="cost_details">
                            <field name="job_id"/>
                            <field name="event_id"/>
                            <field name="name"/>
                            <field name="description" string="Description"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="product_uom_category_id" invisible="True"/>
                        </group>
                        <group>
                            <label for="product_uom_qty"/>
                            <div>
                                <field name="product_uom_qty" class="oe_inline"/>
                                <field name="product_uom" readonly="True" class="oe_inline"/>
                            </div>
                        </group>

                        <group>
                            <field name="currency_id" invisible="True"/>
                            <field name="unit_price" string="Unit price"/>
                            <field name="total_price" string="Total" widget="monetary"/>
                        </group>
                        <group>
                            <field name="not_billable"/>
                            <field name="invoice_line" string="Invoice Line"/>
                            <field name="invoiced" string="invoiced"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>