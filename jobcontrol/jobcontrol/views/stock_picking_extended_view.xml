<odoo>
    <record model="ir.ui.view" id="view_picking_form_extend">
        <field name="name">Job Delivery Form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="job_id"/>
                <field name="event_id"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_tree_extend">
        <field name="name">Job Delivery Tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="job_id"/>
                <field name="event_id"/>
            </field>
        </field>
    </record>

</odoo>